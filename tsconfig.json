{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "lib": [
      "es2015",
      "es2016.array.include",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "demo/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
